doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js', integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='/users') Movie.Me
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      div.collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href='/users') My Profile
          li.nav-item
            form(action='/logout', method='POST')
              button.btn.btn-link(type='submit') Sign Out
    div.container.my-4#movies-form-container
      h1 Movies Search
      form.mt-4(method='POST', action='/results')
        .form-group
          label(for='searchType') Type of Search
          select.form-control(name='searchType', id='searchType')
            option(value='favorite movies') Based off my favorite movies list
            option(value='liked movies') My liked movies list
        .form-group
          label(for='genre') Genre
          select.form-control(name='genre', id='genre')
            option(value='any') Any genre
            option(value='action') Action
            option(value='adventure') Adventure
            option(value='comedy') Comedy
            option(value='drama') Drama
            option(value='horror') Horror
            option(value='romance') Romance
            option(value='sci-fi') Sci-Fi
            option(value='thriller') Thriller
        .form-group
          label(for='yearRange') Year Range
          select.form-control#yearRange(name='yearRange')
            option(value='any') Any Year
            option(value='before the year 2000') Before 2000
            option(value='between the year 2000 to 2010') 2000-2010
            option(value='after the year 2010') After 2010
        .form-group
          label(for='actor') Actor
          textarea.form-control#actor(name='actor', rows='1')
        .form-group
          label(for='description') Description
          textarea.form-control#description(name='description', rows='3')
        button(type='submit') Find Me Recommendations!